                        android:layout_height="wrap_content"
                        android:text="Coffee"
                        android:textSize="18sp"
                        android:textColor="#070000"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center"></TextView>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

